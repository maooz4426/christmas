{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "christmas",
  "version": "0.1.0",
  "identifier": "com.christmas.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "christmas",
        "maximized": true,
        "resizable": true,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }

  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

}
